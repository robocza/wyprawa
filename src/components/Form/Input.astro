---
import FormLabel from './../Form/Label.astro';

interface Props {
    label: string;
    type: string;
    name: string;
    required?: boolean;
    attributes?: {
        [key: string]: string | number;
    };
}

const {
    label,
    type,
    name,
    required = true,
    attributes = [],
} = Astro.props;

const InputElement = type !== 'textarea' ? 'input' : 'textarea';

---
<FormLabel required={required} text={label}>
    <InputElement class:list={[
        'mt-2 border-3 w-full border-canary rounded py-1 px-2 block text-nut-dark bg-white',
        {'max-w-[400px]': type === 'text' || type === 'email'},
        {'max-w-[560px]': type === 'textarea'},
        {'max-w-[160px]': type === 'number'},
    ]} type={type} name={name} {...(required ? { required: true } : {})} {...attributes}/>
</FormLabel>

