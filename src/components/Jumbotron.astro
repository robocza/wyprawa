---
import Container from '../layouts/elements/Container.astro';
import Central from '../layouts/elements/arrangement/Central.astro';
import NextSectionArrow from './NextSectionArrow.astro';

interface Props {
    fullScreen?: boolean;
    nextSectionUrl?: string;
}

const {
    fullScreen = false,
    nextSectionUrl,
} = Astro.props;
---
<section class="" class:list={[
    'flex h-full items-center justify-center text-nut bg-canary-dark relative pt-48 pb-32',
    {'min-h-screen': fullScreen},
]}>
    <Container>
        <slot/>
    </Container>
    {nextSectionUrl &&
        <div class="text-center lg:absolute lg:right-0 lg:bottom-0 lg:left-0">
            <Central>
                <div class="my-10 block">
                    <NextSectionArrow nextSectionUrl={nextSectionUrl}/>
                </div>
            </Central>
        </div>
    }
</section>
