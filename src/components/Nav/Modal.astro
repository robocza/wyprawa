---
import ModalCloseButton from "./../ModalCloseButton.astro";
const {id} = Astro.props;
---

<div id={id} tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 bottom-0 z-60 justify-center items-center w-full lg:inset-0 h-full">
    <div class="relative w-full h-dvh bg-lilac-dark text-canary-dark">
        <!-- Modal content -->
        <div class="relative h-full">
            <!-- Modal header -->
            <div class="flex items-center justify-between py-4 px-4 lg:py-8 lg:px-6">
                <ModalCloseButton id={id}/>
            </div>
            <div class="px-4 lg:px-6 pb-8 space-y-4 lg:space-y-6">
                <slot/>
            </div>
        </div>
    </div>
</div>
