---
import ModalCloseButton from './../ModalCloseButton.astro';
const { id } = Astro.props;
---

<div
    id={id}
    tabindex="-1"
    aria-hidden="true"
    class="fixed top-0 right-0 bottom-0 left-0 z-60 hidden h-full w-full items-center justify-center overflow-x-hidden overflow-y-auto lg:inset-0"
>
    <div class="bg-lilac-dark text-canary-dark relative h-dvh w-full">
        <!-- Modal content -->
        <div class="relative h-full">
            <!-- Modal header -->
            <div class="flex items-center justify-between px-4 py-4 lg:px-6 lg:py-8">
                <ModalCloseButton id={id} />
            </div>
            <div class="space-y-4 px-4 pb-8 lg:space-y-6 lg:px-6">
                <slot />
            </div>
        </div>
    </div>
</div>
