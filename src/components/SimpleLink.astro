---
interface Props {
    url: string;
    text?: string;
    className?: string;
    extraClassName?: string;
}

const {
    url,
    text = await Astro.slots.render('text'),
    className = "text-sm sm:text-base lg:text-lg font-normal text-nut underline underline-offset-2 lg:underline-offset-4 hover:opacity-70",
    extraClassName = '',
} = Astro.props;

---
<a class:list={[
    className,
    extraClassName,
]} href={url}>
    <slot name="text">{text}</slot>
</a>
