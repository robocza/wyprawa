---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <style is:global>
            .pantopian-gradient {
                background: url('/assets/gradient-noise.svg'),
                    radial-gradient(
                        circle at center top,
                        rgb(255, 255, 255) 0%,
                        rgb(253, 230, 80) 10%,
                        rgb(253, 217, 75) 20%,
                        rgb(240, 95, 58) 30%,
                        rgb(245, 187, 212) 40%,
                        rgb(206, 196, 222) 50%,
                        rgb(91, 190, 234) 60%,
                        rgb(78, 183, 199) 70%,
                        rgb(44, 142, 123) 80%,
                        rgb(0, 64, 55) 90%,
                        rgb(0, 0, 0) 100%
                    );
            }

            .pantopian-gradient {
                box-shadow: inset 0 -40px 20px -20px rgb(0, 0, 0);
            }
        </style>
    </head>
    <body class="w-full min-w-[320px]">
        <slot />
    </body>
</html>
