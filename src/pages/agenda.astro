---
import Layout from '@layouts/Layout.astro';
import Header from '../components/Header.astro';
import Jumbotron from '../components/Jumbotron.astro';
import JumbotronLink from '../components/JumbotronLink.astro';
import { Image } from 'astro:assets';
import ChildhoodImage from '../assets/childhood.png';
import JumbotronHeading from '../components/JumbotronHeading.astro';
import JumbotronSection from '../components/JumbotronSection.astro';
import Footer from '../components/Footer.astro';

import agenda from '../data/agenda.json';
import AgendaList from '../components/AgendaList.astro';
---

<Layout title="Agenda | Wyprawa Robocza #7 - Znów">
    <Header />
    <main class="font-body flex min-h-screen flex-col">
        <Jumbotron>
            <JumbotronSection>
                <div class="text-left">
                    <JumbotronHeading title="Agenda" />
                    <div
                        class="prose prose-p:leading-tight prose-base lg:prose-2xl prose-p:text-nut-dark prose-p:font-body prose-p:m-0 prose-h3:text-2xl prose-h3:m-0 prose-h4:text-xl prose-h4:m-0 prose-a:text-nut-dark prose-a:underline prose-a:hover:nut-dark prose-a:hover:text-canary"
                    >
                        <JumbotronLink text="→ Pobierz agendę" url="/agenda-wyprawa-robocza-7.pdf" />
                        <AgendaList agenda={agenda}/>
                    </div>
                </div>
                <Image
                    src={ChildhoodImage}
                    alt="Dziecko zanurza się w marzeniach pełnych gwiazd"
                    class="h-auto w-full max-w-[500px] justify-self-end px-4 xl:px-0"
                    loading="eager"
                />
            </JumbotronSection>
        </Jumbotron>
        <div class="grow"></div>
        <Footer />
    </main>
</Layout>
