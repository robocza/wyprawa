---
import Layout from '@layouts/Layout.astro';
import Central from '@layouts/elements/arrangement/Central.astro';
import About from '@components/about/Content.md';
import FAQ from '@components/faq/Content.md';
import Information from '@components/information/Content.md';
import Footer from '../components/Footer.astro';
import Title from "../components/Title.astro";
import Button from '../components/Button.astro';
import Header from '../components/Header.astro';
import Container from '../layouts/elements/Container.astro';
import SectionProse from '../components/SectionProse.astro';
import SectionBlock from '../components/SectionBlock.astro';
import SectionCallToAction from '../components/SectionCallToAction.astro';
import Jumbotron from '../components/Jumbotron.astro';
---

<Layout title="Wyprawa Robocza #7 — Znów">
    <Header />
    <main class="font-body">
        <Jumbotron>
            <div class="w-full">
                <p class="text-left">12.09.2025 - 14.09.2025</p>
                <h1 class="text-5xl sm:text-8xl lg:text-10xl 2xl:text-16xl uppercase font-serif"><Title/></h1>
                <Central>
                    <div class="mt-4 2xl:mt-8">
                        <Button text='Zapisz się na wyprawę' url="/zapisy#formularz"/>
                    </div>
                </Central>
            </div>
        </Jumbotron>
        <section id="o-wyprawie" class="scroll-mt-[80px] bg-nut-dark text-canary">
            <Container>
                <div class="w-full grid grid-cols-3 gap-8 lg:gap-32 pt-24 pb-12">
                    <SectionBlock id="tory" title="Odnajdź swoje tory. Znów.">
                        <SectionProse>
                            <About />
                        </SectionProse>
                        <SectionCallToAction text='Zapisz się na wyprawę' url="/zapisy#formularz"/>
                    </SectionBlock>
                    <SectionBlock id="informacje" title="Podstawowe informacje">
                        <SectionProse>
                            <Information />
                        </SectionProse>
                        <SectionCallToAction text='Zapisz się na wyprawę' url="/zapisy#formularz"/>
                    </SectionBlock>
                    <SectionBlock id="faq" title="FAQ">
                        <SectionProse>
                            <FAQ />
                        </SectionProse>
                        <SectionCallToAction text='Zapisz się na wyprawę' url="/zapisy#formularz"/>
                    </SectionBlock>
                </div>
            </Container>
        </section>
        <Footer />
    </main>
</Layout>
