---
import Layout from '@layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Container from '../layouts/elements/Container.astro';
import Form from '../components/Form.astro';
import SectionBlock from '../components/SectionBlock.astro';
import Link from '../components/Link.astro';
import Jumbotron from '../components/Jumbotron.astro';

import {Image} from "astro:assets";
import MoebiusImage from '../assets/moebius.png';
import JumbotronLink from '../components/JumbotronLink.astro';
import JumbotronHeading from '../components/JumbotronHeading.astro';
import Section from '@components/Section.astro';
---
<Layout title="Zapisy | Wyprawa Robocza #7 - Znów">
    <Header />
    <main class="font-body">
        <Jumbotron>
            <div class="w-full lg:flex lg:justify-between lg:items-end gap-32 pb-16">
                <div class="text-left">
                    <JumbotronHeading title="Zapisy na wyprawę"/>
                    <p class="text-2xl lg:text-3xl mb-12">Jak to działa?</p>

                    <div class="flex h-full items-center mb-16 lg:mb-0">
                        <div class="w-auto text-left">
                            <ol class="list-[circled-decimal] marker:text-5xl marker:font-bold marker:text-lilac list-outside ml-16 text-2xl lg:text-3xl">
                                <li class="mb-8">
                                    Wyraź chęć udziału w Wyprawie  i zapisz się przez → <JumbotronLink text="ten formularz" url="#formularz"/>
                                </li>
                                <li class="mb-8">
                                    Po zakończeniu zapisów otrzymasz link do płatności.
                                </li>
                                <li>
                                    Płacąc, potwierdzisz swój udział w Wyprawie.
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
                <Image src={MoebiusImage}
                       alt="Wstęga Möbiusa"
                       class="max-w-1/2 mx-auto lg:max-w-none lg:max-h-80 lg:w-auto lg:px-4 xl:px-0"
                       loading="eager"
                />
            </div>
        </Jumbotron>
        <Section id="formularz">
            <SectionBlock>
                <Fragment slot="title">
                    <div>Formularz rejestracyjny</div>
                    <Link text="→ Podstawowe informacje" url="/#informacje" className="text-lg underline text-canary hover:text-nut hover:bg-canary text-base"/>
                </Fragment>
                <Form />
            </SectionBlock>
        </Section>
        <Footer />
    </main>
</Layout>
