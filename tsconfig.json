{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "baseUrl": "src",
        "paths": {
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@styles/*": ["styles/*"]
        },
        "jsx": "preserve"
    },
    "exclude": ["public/archiwum"]
}
